/*
fun fact: 
gdss stands for godot stylesheet! :D

sad fact:
the godot editor's gdss syntax highlighting is still growing up,
thus it does not support multiline comments yet!
owh~ :<

but fear not, the vscode extension does! :D
*/

.box VBoxContainer {
	alignment: 1; // center
	separation: 10;
}

// changes the font size of the richtextlabel
.text_class RichTextLabel {
	theme_override_font_sizes/normal_font_size: 50; // normal font size
	theme_override_font_sizes/bold_font_size: 50; // bold font size
	theme_override_font_sizes/italics_font_size: 50; // italic font size
	theme_override_font_sizes/bold_italics_font_size: 50; // bold italic font size
	theme_override_font_sizes/mono_font_size: 50; // mono font size
	theme_override_colors/default_color: Color(1,0.9,1,1); // slightly pinkish white
}

.edit TextEdit {
	theme_override_colors/background_color: Color(1, 0.5, 1, 1); // light pink (cute! -w-)
	theme_override_colors/font_color: Color(0.1, 0.1, 0.1, 1); // almost black (so it's readable X3)
	// unfixed bug: a color with red, green and blue values of 0 will give an error, although it will work fine :p
	theme_override_colors/font_placeholder_color: Color(0, 0, 0, 0.5); // black with 50% opacity
}
